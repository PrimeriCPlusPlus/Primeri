#include <iostream>
#include <string>
using namespace std;

int BrojNaKarakteri(string str, char ch);

int main() {
	string str = "asdfsaasassdafsdfasdfa";
	char ch = 'a';
	int brojNaPovtoruvanja;
	brojNaPovtoruvanja = BrojNaKarakteri(str, ch);
	cout << "Karakterot se povtoruva  " << brojNaPovtoruvanja << "  pati  " << endl;

	return 0;
}

int BrojNaKarakteri(string str, char ch) {
	int brojac = 0;
	for (int i = 0; i < str.size(); i++)
	{
		if (str[i] == ch)
			brojac = brojac + 1;
	}
	return brojac;
}
