#include <iostream>
using namespace std;

// deklaracija na funicijata:
int NajgolemBroj(int niza[], int brojNaElemetni);

int main() {
	
	int niza[5] = { 1000, 2, 3, 100001, 50 };
	int najgolemBroj;

	najgolemBroj = NajgolemBroj(niza, 5);

	cout << "Najgolem e brojot  : " << najgolemBroj << endl;

	return 0;
}

int NajgolemBroj(int niza[], int brojNaElementi) {
	int najgolemBroj = niza[0];
	for (int i = 0; i < brojNaElementi; ++i) {
		if (najgolemBroj < niza[i])
			najgolemBroj = niza[i];
	}
	return najgolemBroj;
}
